# This tmux statusbar config was created by tmuxline.vim
# on Sun, 23 Jun 2019

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour231,bg=colour59"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour59"
set -g status-style "none,bg=colour238"
set -g message-style "fg=colour231,bg=colour59"
set -g pane-border-style "fg=colour238"
set -g status-right-length "150"
set -g status-left-length "100"
setw -g window-status-activity-style "underscore,fg=colour250,bg=colour238"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour250,bg=colour238"
set -g status-left "#[fg=colour59,bg=colour231] [#S] #[fg=colour231,bg=colour238,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour231,bg=colour238,nobold,nounderscore,noitalics]#[fg=colour59,bg=colour231] \"#22T\" #{battery_status_bg} Batt: #{battery_icon} #{battery_percentage} #{battery_remain} | ♫ #{spotify_status} #{spotify_artist}: #{spotify_track} | %H:%M %d-%b-%y "
setw -g window-status-format "#[fg=colour238,bg=colour238,nobold,nounderscore,noitalics]#[default] #I:#W#F #[fg=colour238,bg=colour238,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour238,bg=colour59,nobold,nounderscore,noitalics]#[fg=colour231,bg=colour59] #I:#W#F #[fg=colour59,bg=colour238,nobold,nounderscore,noitalics]"
